<!-- A user can log in here. -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Tic Tac Toe - Login</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style type="text/css">
		body {
      background-image: url('https://ak.picdn.net/shutterstock/videos/21184336/thumb/1.jpg');
      background-size: 100%;
    }
    .alert {
      text-align: center;
    }
    .box {
      margin: auto;
    }
    #regButton, .btn {
 			margin-top:5%;
 		}
		</style>
</head>
<body>
  <% if (flashMessages && flashMessages.success) {
      flashMessages.success.forEach(function(successMsg) {%>
        <div class="alert alert-success" role="alert"><%= successMsg %></div>
    <% });
    } else if (flashMessages && flashMessages.errors) {
          flashMessages.errors.forEach(function(errorMsg) { %>
              <div class="alert alert-danger" role="alert"><%= errorMsg %></div>
  <% });
    } %>
    <div class="container p-5">
        <h1 class="text-center mb-5 text-uppercase">Welcome To Tic Tac Toe! </h1>
        <div class="row">
            <div class="box col-sm-5 bg-light border rounded py-3">
                <h2 class="text-center">Login</h2>
                <form action="/api/login" method="POST">
                    <div class="form-group">
                      <label for="email">Email</label>
                      <input type="email" name="userEmail" id="email" class="form-control" placeholder="Email" required>
                    </div>
                    <div class="form-group">
                      <label for="pass">Password</label>
                      <input type="password" name="userPass" id="pass" class="form-control" placeholder="Password" required>
                    </div>
                    <% if (flashMessages) {
                        if (flashMessages.loginErrors) {
                        flashMessages.loginErrors.forEach(function(errorMsg) { %>
                          <div class="alert alert-danger" role="alert"><%= errorMsg %></div>
                      <% });
                    }}%>
                      <button type="submit" class="btn btn-success col-sm">Login</button>
                      <a id="regButton" href="/register" class="btn btn-primary col-sm">Register Account</a>
                </form>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
